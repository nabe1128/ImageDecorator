<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="jp.hokkaido.zawa.imagedecorator.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/actionHomeFragmentToGalleryFragment"
            app:destination="@id/galleryFragment"
            app:enterAnim="@anim/slide_from_bottom" />
    </fragment>

    <fragment
        android:id="@+id/galleryFragment"
        android:name="jp.hokkaido.zawa.imagedecorator.gallery.GalleryFragment"
        android:label="fragment_gallery"
        tools:layout="@layout/fragment_gallery">
        <action
            android:id="@+id/actionGalleryFragmentToPhotoPickupFragment"
            app:destination="@id/photoPickupFragment" />
    </fragment>

    <fragment
        android:id="@+id/photoPickupFragment"
        android:name="jp.hokkaido.zawa.imagedecorator.gallery.PhotoPickupFragment"
        android:label="fragment_photo_pickup"
        tools:layout="@layout/fragment_photo_pickup">
        <argument
            android:name="photoId"
            app:argType="long" />
    </fragment>
</navigation>